@model ProfileFormViewModel

@{
    ViewData["Title"] = "Update User Prifle";
}

<form asp-action="EditProfile" method="post" class="fromInput">
    <h2>تعديل بيانات المستخدم</h2>
    <hr />
    <input type="hidden" asp-for="Id" />
    @*   <div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="form-floating">
        <input asp-for="FirstName" class="form-control" autocomplete="firstName" aria-required="true" maxlength="100" />
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" maxlength="100" />
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-floating">
        <input asp-for="UserName" class="form-control" autocomplete="UserName" aria-required="true" maxlength="100" />
        <label asp-for="UserName"></label>
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    
   
    <button type="submit" class="w-100 btn btn-lg btn-primary d-block nt-4">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}