@model AddUserViewModel

@{
    ViewData["Title"] = "Add New User";
}

<form action="AddNewUser" method="post" class="fromInput">
    <h2>اضافة مستخدم جديد</h2>
    <hr />
 @*   <div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="form-floating">
            <input asp-for="FirstName" class="form-control" autocomplete="firstName" aria-required="true" maxlength="100" />
            <label asp-for="FirstName"></label>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="LastName" class="form-control" autocomplete="lastname" aria-required="true" maxlength="100" />
            <label asp-for="LastName"></label>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="Password"></label>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
            <label asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    
    <hr />
    <h6>Roles</h6>
    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <div class="form-check m-1">
            <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
            <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
            <label class="form-check-lable" asp-for="@Model.Roles[i].IsSelected">
                @Model.Roles[i].RoleName
            </label>
        </div>
    }
    <span asp-validation-for="Roles" class="text-danger"></span>
    <button type="submit" class="w-100 btn btn-lg btn-primary d-block nt-4">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}